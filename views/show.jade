div(id="wrapper")
    div(id="header")
       h1
         img(src="/images/logo.png",width="235", height="78")
       div(id="nav")
            a(href="/") Home
            a(href="/event/add") add event
            a(href="/event/list") events
     div(class="clear")
     div(id="headline")
     div(id="body")
        h2= post.title
        - if(owner != "undefined")
          h5="Added By: "+owner.username
        h5= "Starts: "+post.startdate
        h5= "Ends:   "+post.enddate
        - if(post.venue != null && post.venue !="undefinded")
            h5= "Venue: "+post.venue
        p=  post.content
        div(id="map")
        input(type="hidden", value=post.longlat.lat, name="latitude")
        input(type="hidden",value=post.longlat.lon, name="longitude")