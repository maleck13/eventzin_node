div(id="wrapper")
    div(id="header")
       h1
         img(src="/images/logo.png",width="235", height="78")
       div(id="nav")
            a(href="/") Home
            a(href="/event/add") add event
            a(href="/event/list") events
     div(class="clear")
     div(id="headline")
       h2 Add An Event
     div(id="body")
        form(method="POST",action="/user/login")
            fieldset
                    p
                    legend Register:
                    p
                    legend username :
                      input(name="username",placeholder="choose a username",width=200)
                      span(class="hidden red", id="username_error")
                    p
                    legend password :
                        input(name="password",placeholder=" password",width=200, type="password")
                        span(class="hidden red", id="email_error")
                    p
                        input(type="submit",value="signin")